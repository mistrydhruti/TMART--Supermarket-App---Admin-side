<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rounded_dialog"
    android:layout_width="match_parent"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:layout_height="245dp">

    <RelativeLayout
        android:gravity="center"
        android:id="@+id/details_button"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="0dp"
                android:layout_weight="4"
                android:text="Details"
                android:textColor="@color/white"
                android:fontFamily="@font/amiko"
                android:textSize="18sp"
                android:background="@drawable/dialog_button"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_below="@id/details_button"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <RelativeLayout
        android:id="@+id/name_rl"
        android:layout_below="@id/view1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layoutAnimation="@anim/layout_animation_down_to_up"
        android:layout_height="40dp">

        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:text="Order ID  "
                android:fontFamily="@font/arial"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text=":"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:layout_height="match_parent"/>


            <TextView
                android:layout_width="0dp"
                android:layout_weight="4.5"
                android:text=""
                android:id="@+id/orderid"
                android:textColor="@color/black"
                android:fontFamily="@font/arial"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/phone_rl"
        android:layout_below="@+id/name_rl"
        android:layout_width="match_parent"
        android:layoutAnimation="@anim/layout_animation_down_to_up"
        android:layout_height="40dp">

        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:text="Delivery boy name  "
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text=":"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:layout_height="match_parent"/>


            <TextView
                android:layout_width="0dp"
                android:layout_weight="4.5"
                android:text=""
                android:id="@+id/delname"
                android:fontFamily="@font/arial"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/aadhar_rl"
        android:layout_below="@id/phone_rl"
        android:layout_width="match_parent"
        android:layoutAnimation="@anim/layout_animation_down_to_up"
        android:layout_height="40dp">

        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:text="Delivery boy phone no. "
                android:fontFamily="@font/arial"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text=":"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="4.5"
                android:id="@+id/delphone"
                android:fontFamily="@font/arial"
                android:text=""
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/license_rl"
        android:layout_below="@+id/aadhar_rl"
        android:layout_width="match_parent"
        android:layoutAnimation="@anim/layout_animation_down_to_up"
        android:layout_height="40dp">

        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:text="Customer email ID"
                android:textSize="16sp"
                android:fontFamily="@font/arial"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text=":"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="4.5"
                android:id="@+id/customer_email"
                android:text=""
                android:fontFamily="@font/arial"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/location_rl"
        android:layout_below="@+id/license_rl"
        android:layout_width="match_parent"
        android:layoutAnimation="@anim/layout_animation_down_to_up"
        android:layout_height="40dp">

        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:text="Order Date "
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text=":"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:layout_height="match_parent"/>


            <TextView
                android:layout_width="0dp"
                android:layout_weight="4.5"
                android:text=""
                android:fontFamily="@font/arial"
                android:id="@+id/orderdate"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>