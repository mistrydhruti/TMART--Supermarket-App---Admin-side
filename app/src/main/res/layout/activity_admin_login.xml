<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="13">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="7"
        android:padding="16dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="3">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_margin="10dp"
            android:id="@+id/iv1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:src="@drawable/tmart" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="9dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layoutAnimation="@anim/layout_animation_down_to_up"
            android:weightSum="1">

            <ImageView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center"
                android:src="@drawable/ic_person_outline_black_24dp"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="8.5"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="4dp"
            android:layoutAnimation="@anim/layout_animation_down_to_up"
            android:weightSum="1">

            <EditText
                android:id="@+id/username"
                android:hint="Username"
                android:fontFamily="@font/arial"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:cursorVisible="true"
                android:textCursorDrawable="@drawable/new_cursor2"
                android:layout_gravity="center"
                android:textColor="@color/admin"
                android:layout_weight="0.9"
                android:background="@drawable/new_edit2"
                android:inputType="textPersonName"
                android:letterSpacing="0.05"
                android:maxLength="10"
                android:paddingLeft="8dp"
                android:textSize="18sp" />


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layoutAnimation="@anim/layout_animation_down_to_up"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="9dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/lockicon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center"
                android:src="@drawable/ic_lock_black_24dp"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="8.5"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="4dp"
            android:layoutAnimation="@anim/layout_animation_down_to_up"
            android:weightSum="1">

            <EditText
                android:id="@+id/password"
                android:cursorVisible="true"
                android:fontFamily="@font/arial"
                android:hint="Password"
                android:layout_width="match_parent"
                android:textCursorDrawable="@drawable/new_cursor2"
                android:layout_height="0dp"
                android:inputType="textPassword"
                android:layout_gravity="center"
                android:textColor="@color/admin"
                android:layout_weight="0.9"
                android:background="@drawable/new_edit2"
                android:letterSpacing="0.05"
                android:maxLength="10"
                android:paddingLeft="8dp"
                android:textSize="18sp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layoutAnimation="@anim/layout_animation_down_to_up"
        android:weightSum="3">

        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:fontFamily="@font/arial"
            android:gravity="center"
            android:text="No. of attempts: 5"
            android:textStyle="bold"
            android:textColor="@color/admin"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.8"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layoutAnimation="@anim/layout_animation_down_to_up"
        android:layout_height="0dp">

        <View
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <CheckBox
            android:id="@+id/remme"
            android:fontFamily="@font/arial"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_weight="9"
            android:textColor="@color/admin"
            android:gravity="center_vertical"
            android:text="Keep me logged in !"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1.8"
        android:gravity="center"
        android:orientation="horizontal"
        android:layoutAnimation="@anim/layout_animation_down_to_up"
        android:weightSum="3">

        <Button
            android:id="@+id/login"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/amiko"
            android:layout_weight="1"
            android:background="@drawable/button_design2"
            android:text="Login"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

    </LinearLayout>


</LinearLayout>