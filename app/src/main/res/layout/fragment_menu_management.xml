<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="8"
    android:orientation="vertical"
    android:layoutAnimation="@anim/layout_animation_down_to_up">

    <TextView
        android:layout_weight="1"
        android:onClick="add_product_admin"
        android:text="Add Products"
        android:gravity="center"
        android:id="@+id/add_product_admin"
        android:textSize="20sp"
        android:fontFamily="@font/amethysta"
        android:textColor="@color/admin"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <View
        android:layout_weight="0.01"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <TextView
        android:layout_weight="1"
        android:onClick="update_product_admin"
        android:text="Update Products"
        android:gravity="center"
        android:id="@+id/update_product_admin"
        android:textSize="20sp"
        android:fontFamily="@font/amethysta"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <View
        android:layout_weight="0.01"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <TextView
        android:layout_weight="1"
        android:text="Delete Products"
        android:onClick="delete_products_admin"
        android:id="@+id/delete_products_admin"
        android:gravity="center"
        android:textSize="20sp"
        android:fontFamily="@font/amethysta"
        android:textColor="@color/admin"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <View
        android:layout_weight="0.01"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <TextView
        android:layout_weight="1"
        android:text="Best Selling Items"
        android:onClick="bestselling_admin"
        android:id="@+id/bestselling_admin"
        android:gravity="center"
        android:textSize="20sp"
        android:fontFamily="@font/amethysta"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <View
        android:layout_weight="0.01"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <TextView
        android:layout_weight="1"
        android:text="Daily News"
        android:onClick="daily_news"
        android:id="@+id/daily_news"
        android:gravity="center"
        android:textSize="20sp"
        android:fontFamily="@font/amethysta"
        android:textColor="@color/admin"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <View
        android:layout_weight="0.01"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</LinearLayout>